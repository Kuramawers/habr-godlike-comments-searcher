{
	"manifest_version": 2,
	"name": "GODLICKE HABR",
	"version": "0.0.1",

	"description": "Extension for search of godlike-comments on habr's articles",
	"icons": {
		"16": "./images/ico_16.png"
	},

	"browser_action": {
		"default_title": "GODLICKE HABR",
		"default_popup": "./index.html"
	},

	"author": "Maksim Talstykh",
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+H",
				"mac": "MacCtrl+Shift+H"
			},
			"description": "Opens extension"
		}
	},

	"permissions": [
		"http://habr.ru/*"
	]
}
